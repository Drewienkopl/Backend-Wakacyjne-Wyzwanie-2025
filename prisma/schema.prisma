generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseCategory {
  FOOD
  TRAVEL
  LODGING
  OTHER
}

enum ParticipantRole {
  ORGANIZER
  MEMBER
}

model Trip {
  id           Int           @id @default(autoincrement())
  name         String
  startDate    DateTime
  endDate      DateTime?
  budget       Float?
  createdAt    DateTime      @default(now())

  participants Participant[]
}

model Participant {
  id          Int              @id @default(autoincrement())
  name        String
  lastname    String
  email       String?
  role        ParticipantRole  @default(MEMBER)
  createdAt   DateTime         @default(now())

  trip        Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId      Int

  expenses    Expense[] @relation("ParticipantExpenses")

  User        User?     @relation(fields: [email], references: [email], onDelete: Cascade)
}

model Expense {
  id        Int             @id @default(autoincrement())
  amount    Float
  currency  String          @default("PLN")
  amountPLN Float
  category  ExpenseCategory
  note      String?
  paidAt    DateTime?       
  createdAt DateTime        @default(now())

  participant   Participant @relation("ParticipantExpenses", fields: [participantId], references: [id], onDelete: SetNull)
  participantId Int
}

enum Role {
  USER
  ADMIN
  COORDINATOR
}

model User {
  email          String          @id @unique
  password       String
  name           String?
  role           Role            @default(USER)
  additionalInfo String?
  isEnabled      Boolean         @default(true)
  createdAt      DateTime        @default(now())
  
  participants   Participant[]
}

model CurrencyRate {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String?
  rateToPLN Float
  updatedAt DateTime @updatedAt
}